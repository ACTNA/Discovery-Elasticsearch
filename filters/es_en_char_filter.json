## filter to standardise some common word endings ##

"char_filter": {
  "en_char_filter": {
    "type": "mapping",
    "mappings": ["prise=>prixse",
           "PRISE=>PRIXSE",
            "isable=>izable",
            "ISABLE=>IZABLE",
            "isation=>ization",
            "ISATION=>IZATION",
            "ise=>ize",
            "ISE=>IZE",
            "ising=>izing",
            "ISING=>IZING",
            "sation=>zation",
            "SATION=>ZATION",
            "ised=>ized",
            "ISED=>IZED"]
  }
}
