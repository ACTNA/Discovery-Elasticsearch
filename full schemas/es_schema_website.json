## Schema website ##
{
  "settings": {
    "analysis": {
      "filter": {
        "tna_word_delimiter": {
          "type": "word_delimiter",
          "catenate_words": true,
          "preserve_original": true
        },
        "tna_unique": {
          "type": "unique",
          "only_on_same_position": true
        },
        "autocomplete_filter": {
          "type": "edge_ngram",
          "min_gram": 1,
          "max_gram": 20,
          "token_chars": [ "letter", "digit" ]
        }
      },
      "char_filter": {
        "alphanumsort_0": {
          "type": "pattern_replace",
          "pattern": "(\\d+)",
          "replacement": "000000000$1"
        },
        "alphanumsort_1": {
          "type": "pattern_replace",
          "pattern": "0*([0-9]{8,})",
          "replacement": "$1"
        },
        "alphanumsort_2": {
          "type": "pattern_replace",
          "pattern": "([^a-zA-Z0-9])",
          "replacement": ""
        },
        "en_char_filter": {
          "type": "mapping",
          "mappings": [
            "prise=>prixse",
            "isable=>izable",
            "isation=>ization",
            "ise=>ize",
            "ising=>izing",
            "sation=>zation",
            "ised=>ized"
          ]
        }
      },
      "analyzer": {
        "txt_exact": {
          "type": "custom",
          "tokenizer": "standard",
          "filter": [ "asciifolding", "lowercase", "tna_word_delimiter", "german_normalization" ],
          "char_filter": [ "en_char_filter" ]
        },
        "txt_stemmed": {
          "type": "custom",
          "tokenizer": "standard",
          "filter": ["asciifolding", "lowercase", "tna_word_delimiter", "german_normalization",
                      "keyword_repeat", "porter_stem", "tna_unique"],
          "char_filter": [ "en_char_filter" ]
        },
        "alphanumsort": {
          "type": "custom",
          "filter": [ "lowercase", "trim" ],
          "tokenizer": "keyword",
          "char_filter": [ "alphanumsort_0", "alphanumsort_1", "alphanumsort_2" ]
        },
        "autocomplete": {
          "type": "custom",
          "tokenizer": "standard",
          "filter": [ "lowercase", "autocomplete_filter" ]
        }
      }
    }
  },
  "mappings": {
